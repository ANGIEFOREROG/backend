<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos en Tiempo Real</title>
    <style>
        
    
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            text-align: center;
            color: blueviolet;
        }

        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input, textarea {
            width: 30%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            padding: 10px;
            background-color: #4caf50;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        ul {
            list-style-type: none;
            padding: 0;
            width: 40%;
        }

        li {
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
        }

        .deleteProductBtn {
            padding: 8px;
            background-color: #f44336;
            color: white;
            border: none;
            cursor: pointer;
        }

        .deleteProductBtn:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>

    <h1>ART</h1>

    <!-- Formulario para agregar productos -->
    <form id="productForm">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required>

        <label for="description">Descripción:</label>
        <textarea id="description" name="description" required></textarea>

        <label for="code">Código:</label>
        <input type="text" id="code" name="code" required>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" required>

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required>

        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required>

        <label for="thumbnails">URL de Thumbnails:</label>
        <input type="text" id="thumbnails" name="thumbnails">

        <button type="submit">Agregar Producto</button>
    </form>

    <!-- Lista de Productos en Tiempo Real -->
    <h1>Lista de Productos en Tiempo Real</h1>
    <ul id="realTimeProductList">
        {{#each products}}
            <li>
                <strong>ID:</strong> {{this.id}} <br>
                <strong>Título:</strong> {{this.title}} <br>
                <strong>Descripción:</strong> {{this.description}} <br>
                <strong>Código:</strong> {{this.code}} <br>
                <strong>Precio:</strong> {{this.price}} <br>
                <strong>Status:</strong> {{this.status}} <br>
                <strong>Stock:</strong> {{this.stock}} <br>
                <strong>Categoría:</strong> {{this.category}} <br>
                <strong>Thumbnails:</strong> {{this.thumbnails}} <br>
                <!-- Botón de eliminar para cada producto -->
                <button class="deleteProductBtn" data-product-id="{{this.id}}">Eliminar</button>
            </li>
        {{/each}}
    </ul>

    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>

</body>
</html>
